{
  "compilerOptions": {
    /* Type Checking */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    /* Modules */
    "module": "nodenext",
    "rootDir": "src",

    /* Emit */
    "inlineSourceMap": true,
    "inlineSources": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "removeComments": true,

    /* Interop Contraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Backwards Compatibility */
    "importsNotUsedAsValues": "remove",

    /* Language and Environment */
    "target": "es2016"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["src/**/*"]
}
